<Window x:Class="John.Scribble.Shell.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Regions="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
        Title="Scribble - A WPF Sample application by John" Height="700" Width="800" WindowStyle="ToolWindow" MaxHeight="700" MaxWidth="800">
    <DockPanel>
        <ContentControl x:Name="MenuRegion" Regions:RegionManager.RegionName="MenuRegion" 
                        DockPanel.Dock="Top" />

        <ContentControl x:Name="CanvasRegion" Regions:RegionManager.RegionName="CanvasRegion" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Top"/>

        <ContentControl x:Name="StatusbarRegion" Regions:RegionManager.RegionName="StatusbarRegion" 
                        DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
